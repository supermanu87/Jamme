<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/orange">
    <EditText
        android:id="@+id/et_un"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@android:drawable/editbox_background"
        android:lines="1"
        android:maxLines="1"
        android:maxLength="140"
        android:gravity="center_horizontal"
        android:hint="Username"
        android:layout_above="@+id/et_pw"
        android:layout_alignLeft="@+id/et_pw"
        android:layout_alignStart="@+id/et_pw"
        android:layout_marginBottom="27dp"
        android:nextFocusDown="@+id/et_pw"
        />

    <EditText
        android:id="@+id/et_pw"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@android:drawable/editbox_background"
        android:password="true"
        android:hint="Password"
        android:layout_centerVertical="true"
        android:gravity="center_horizontal"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/button_anonimous"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Anonimous"
        android:textSize="22dp"
        android:layout_below="@+id/et_pw"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28dp" />


    <TextView
        android:id="@+id/tv_error"
        android:layout_width="fill_parent"
        android:layout_height="40dip"
        android:textSize="7pt"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="9dip"
        android:layout_marginLeft="15dip"
        android:textColor="#AA0000"
        android:text="" />

    <Button
        android:id="@+id/button_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        android:layout_alignLeft="@+id/et_un"
        android:layout_alignStart="@+id/et_un"
        android:layout_alignBaseline="@+id/button_anonimous"
        android:textSize="22dp" />

    <Button
        android:id="@+id/button_signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register"
        android:textSize="22dp"
        android:layout_alignRight="@+id/et_pw"
        android:layout_alignEnd="@+id/et_pw"
        android:layout_alignBaseline="@+id/button_anonimous" />


</RelativeLayout>
